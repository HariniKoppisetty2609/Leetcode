class Solution {
    public int pivotIndex(int[] nums) {
        int n = nums.length;
        int[] leftindex = new int[n];
        int[] rightindex = new int[n];

        for(int i = 1; i < n ; i++){
            leftindex[i] = leftindex[i-1]+nums[i-1];
        }
        for(int i = n-2; i >= 0; i--){
            rightindex[i] = rightindex[i+1] + nums[i+1];
        }
        for(int i = 0; i < n; i++){
            if(leftindex[i] == rightindex[i]){
                return i;
            }
        }
        return -1;
    }
}
